@model IEnumerable<Category>

@{

    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>

<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create</a>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Dispaly Order</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>

</table>