@model CreateGameFormViewModel

@{
    ViewData["title"] = "Add Game";
}

<h5>
    <i class="bi bi-plus-circle"></i>
    Add a new game 
</h5>

<form asp-controller="Games" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <!--Name-->
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <!--Categories-->
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                    <option value="">Select a category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <!--Devices-->
            <div class="form-group">
                <label asp-for="SelectedDevicies" class="form-label mt-4"></label>
                <select class="form-select" asp-for="SelectedDevicies" asp-items="Model.Devices">
                    <option>Select a devices</option>
                </select>
                <span asp-validation-for="SelectedDevicies" class="text-danger"></span>
            </div>
            <!--Description-->
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <!--Cover-->
            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover" data-rule-extension="@FileSettings.AllowedExtensions.Replace(".",string.Empty)" data-msg-extension="Not allowed extension">
                <span asp-validation-for="Cover" class="text-danger"></span>
                <small class="form-text text-muted d-block">Only @FileSettings.AllowedExtensions files are allowed with max size @(FileSettings.MaxFileSizeInMB)MB</small>
            </div>
            <button type="submit" class="btn btn-light text-black mt-4">Save</button>
        </div>
        <div class="col-md-6">

        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
 }