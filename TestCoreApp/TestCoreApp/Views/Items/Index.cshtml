@model IEnumerable<Item>
    
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2>Items View</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="" asp-action="New" class="btn btn-primary">Add New Item</a>
        </div>
    </div>
    <table class="table table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Item name
                </th>
                <th>
                    Item price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">
                        @item.Name
                    </td>
                    <td width="30%">
                        @item.Price
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>